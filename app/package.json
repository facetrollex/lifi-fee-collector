{
  "name": "lf-fee-collector-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sh -c 'npm run dev:api & npm run dev:worker & wait'",
    "dev:api": "tsx watch api.ts",
    "dev:worker": "tsx watch worker.ts",
    "build": "tsc --project tsconfig.json",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./jest.config.ts",
    "test:watch": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./jest.config.ts --watch",
    "test:coverage": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./jest.config.ts --coverage",
    "start:api": "node dist/api.js",
    "start:worker": "node dist/worker.js"
  },
  "dependencies": {
    "@typegoose/typegoose": "13.1.0",
    "dotenv": "17.2.4",
    "ethers": "5.8.0",
    "express": "5.2.1",
    "lifi-contract-types": "git@github.com:lifinance/lifi-contract-types.git#b540e56b15c3f6b7cc0328e2b82928214eaff6a0",
    "mongoose": "9.1.6",
    "winston": "3.19.0"
  },
  "devDependencies": {
    "@types/express": "5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "25.2.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "ts-jest": "^29.4.6",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
